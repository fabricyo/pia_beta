{
	"name": "codeigniter4/appstarter",
	"type": "project",
	"description": "PIA - Painel de Intervenção Árvorea",
	"homepage": "http://localhost/novacap",
	"require": {
		"php": "^7.3||^8.0",
		"codeigniter4/framework": "^4",
      "ext-json": "*",
		"phpoffice/phpspreadsheet": "^1.18",
      "ext-gd": "*"
    },
	"require-dev": {
		"fakerphp/faker": "^1.9",
		"mikey179/vfsstream": "^1.6",
		"phpunit/phpunit": "^9.1"
	},
	"suggest": {
		"ext-fileinfo": "Improves mime type detection for files"
	},
	"autoload": {
		"psr-4": {
			"App\\": "app",
			"Config\\": "app/Config"
		},
		"exclude-from-classmap": [
			"**/Database/Migrations/**"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\Support\\": "tests/_support"
		}
	},
	"scripts": {
		"test": "phpunit"
	}
}
